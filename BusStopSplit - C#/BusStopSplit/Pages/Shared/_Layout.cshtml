<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BusStopSplit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/TextAttributes.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark" style="background-color:darkblue;">
            <a asp-page="/Index"><img src="~/Images/Logo1.PNG" class="d-flex" style="width:100px; height:45px;" /></a>
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarsExample01" aria-controls="navbarsExample01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"><i class="fas fa-bars" style="color:#fff; font-size:28px;"></i></span>
            </button>

            <div class="navbar-collapse collapse" id="navbarsExample01" style="">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active d-flex flex-row align-items-center">
                        <img src="~/Images/question2.png" style="width:15px; height:15px; margin-right:5px;"/>
                        <a asp-page="/Interface/About" class="nav-link navbar-button-elements" style="">About</a>
                    </li>
                    <li class="nav-item active d-flex flex-row align-items-center">
                        <img src="~/Images/map.png" style="width:15px; height:15px; margin-right:5px;" />
                        <a asp-page="/Index" class="nav-link navbar-button-elements">Map</a>
                    </li>
                    <li class="nav-item active d-flex flex-row align-items-center">
                        <img src="~/Images/calendar.png" style="width:15px; height:15px; margin-right:5px;" />
                        <a asp-page="/Interface/BusCoverageArea" class="nav-link navbar-button-elements">Timetable</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>